<!-- include static header -->
<%- include ('partials/header.ejs') %>

<!-- Include additional scripts -->
<script src="js/ajax/settingsLogic.js"></script>

<!-- main content -->
<div class="container">
    <br>
    <div class="row">
        <div class="col-sm-12">
            <div class="card card-header">
                Einstellungen
            </div>
            <br>
            <div class="card">
                <div class="col">
                    <div class="row">
                        <div class="col">
                            <br>
                            <h2>Berechtigungen</h2>
                            <p>Berechtigungslevel:
                                <% if(session.privileges == "U") { %>
                                    <span style="float: right" class="badge badge-primary">User</span>
                                <% } else { %>
                                    <span style="float: right" class="badge badge-danger">Admin</span>
                                <% } %>
                            </p>
                        </div>
                    </div>

                    <div class="dropdown-divider"></div>

                    <h2>Persönliche Daten</h2>
                    <div class="row">
                        <div class="col-10">
                            <p>Name: <span class="badge badge-primary" id="settingsUsername"><%= session.username %></span></p>
                        </div>
                        <div class="col-2">
                            <%- include ('modals/change-name-modal.ejs') %>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-10">
                            <p>Email: <span class="badge badge-primary" id="settingsEmail"><%= session.email %></span></p>
                        </div>
                        <div class="col-2">
                            <%- include ('modals/change-email-modal.ejs') %>
                        </div>
                    </div>

                    <div class="dropdown-divider"></div>

                    <h2>Passwort</h2>
                    <div class="row">
                        <div class="col-10">
                            <p>Passwort ändern</p>
                        </div>
                        <div class="col-2">
                            <%- include ('modals/change-password-modal.ejs') %>
                        </div>
                    </div>

                    <div class="dropdown-divider"></div>
                    <br>
                        <%- include ('modals/delete-account-modal.ejs') %>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- include footer -->
<%- include ('partials/bottom.ejs') %>
<%- include ('partials/footer.ejs') %>
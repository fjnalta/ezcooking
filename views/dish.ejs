<!-- include static header -->
<% include partials/header.ejs %>


<!-- dynamic main content -->
<div class="container">
    <!-- move the content one row down -->
    <br>
    <!-- everything in this div in one row -->
    <div class="row">
        <!-- left menu -->
        <div class="col-sm-12 col-md-3">
            <!-- include left menu -->
            <% include partials/left-menu.ejs %>
        </div>

        <!-- main content -->
        <div class="col-sm-12 col-md-9">
            <div class="card">
                <div class="col">
                    <br>
                    <div class="row">
                        <div class="col-9">
                            <h1><%= data.name %></h1>
                            <p><%= data.short_description %></p>
                        </div>
                        <div class="col-3">
                            <p style="text-align: right">
                                <i class="far fa-clock"></i> <%= data.duration %>min<br>
                                <i class="far fa-user"></i> <a href="/user/<%= data.creator_id %>"><%= data.creator %></a>
                                <% if(session && session.privileges == 'A') { %>
                                <br>
                                <a href="/dish/<%= data.id %>/assign"><span class="badge badge-danger float-right">Rezept Ã¼bernehmen</span></a>
                                <% } %>
                            </p>
                        </div>
                    </div>

                    <div class="dropdown-divider"></div>

                    <img src="/public/uploads/<%= data.image_name %>" class="img-thumbnail">

                    <div class="dropdown-divider"></div>

                    <p><h2>Zutaten</h2></p>

                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Einheit</th>
                            <th>Zutat</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0;i<data.ingredients.length;i++) { %>
                                <tr>
                                    <td><%= data.ingredients[i].count %></td>
                                    <td><p data-toggle="tooltip" title="<%= data.ingredients[i].unit_name %>"><%= data.ingredients[i].short_name %></p></td>
                                    <td><%= data.ingredients[i].name %></td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>

                    <div class="dropdown-divider"></div>

                    <p><h2>Zubereitung</h2></p>
                    <p style="white-space: pre-line"><%- data.preparation %></p>
                    <br>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- spacing between content and footer -->
<br>
<!-- include static footer -->
<% include partials/footer.ejs %>
<!-- spacing at content end -->
<br>
<!-- include static header -->
<% include partials/header.ejs %>

<!-- dynamic main content -->
<div class="container">
    <!-- move the content one row down -->
    <br>
    <!-- everything in this div in one row -->
    <div class="row">
        <!-- left menu -->
        <div class="col-3">
            <!-- include left menu -->
            <% include partials/left-menu.ejs %>
        </div>

        <!-- main content -->
        <div class="col-9">
            <div class="card">
                <div class="col">
                    <br>
                    <div class="row">
                        <div class="col-9">
                            <h1><%= data.name %></h1>
                            <p><%= data.short_description %></p>
                        </div>
                        <div class="col-3">
                            <p style="text-align: right">
                                <i class="far fa-clock"></i> <%= data.duration %>min<br>
                                <i class="far fa-user"></i> <a href="/user/<%= data.creator_id %>"><%= data.creator %></a>
                            </p>
                        </div>
                    </div>

                    <div class="dropdown-divider"></div>

                    <img src="/public/uploads/<%= data.image_name %>" class="card-img-top">

                    <div class="dropdown-divider"></div>

                    <p><h2>Zutaten</h2></p>

                    <% for(let i=0;i<data.ingredients.length;i++) { %>
                    <div class="row">
                        <div class="col-6">
                            <p data-toggle="tooltip" title="<%= data.ingredients[i].count %> <%= data.ingredients[i].unit_name %>">
                                <%= data.ingredients[i].count %>
                                <%= data.ingredients[i].short_name %></p>
                        </div>
                        <div class="col-6">
                            <p><%= data.ingredients[i].name %></p>
                        </div>
                    </div>
                    <% } %>

                    <div class="dropdown-divider"></div>

                    <p><h2>Zubereitung</h2></p>
                    <div class="fr-view">
                        <%- data.preparation %>
                    </div>

                    <br>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- spacing between content and footer -->
<br>
<!-- include static footer -->
<% include partials/footer.ejs %>
<!-- spacing at content end -->
<br>
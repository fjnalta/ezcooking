<!-- include static header -->
<% include partials/header.ejs %>

<!-- dynamic main content -->
<div class="container">
    <!-- move the content one row down -->
    <br>
    <!-- everything in this div in one row -->
    <div class="row">
        <!-- left menu -->
        <div class="col-3">
            <!-- include left menu -->
            <% include partials/left-menu.ejs %>
        </div>

        <!-- main content -->
        <div class="col-9">
            <!-- include main content -->
            <div class="card">
                <div class="col">
                    <br>
                    <h1>Durchsuchen</h1>
                    <br>
                    <% for(let i=0;i<data.length;i++) { %>
                        <ul class="list-unstyled">
                            <li><a href="/browse/<%= data[i].id %>"><%= data[i].name %> (<%= data[i].count %>)</a></li>
                                <% for(let j=0;j<data[i].subCategories.length;j++) { %>
                                    <ul>
                                        <li><a href="/browse/<%= data[i].id %>/sub/<%= data[i].subCategories[j].id%>"><%= data[i].subCategories[j].name %> (<%= data[i].subCategories[j].count %>)</a></li>
                                    </ul>
                                <% } %>
                        </ul>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- include static footer -->
<% include partials/footer.ejs %>
<!-- spacing at content end -->
<br>
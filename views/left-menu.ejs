<!-- show login/register menu item if not logged in -->
<div class="list-group">
    <% if(!session) { %>
    <button type="button" class="list-group-item list-group-item-action" data-toggle="modal" data-target="#loginModal">Login<span
            class="badge badge-primary float-right">
            <%=username %></span></button>
    <button type="button" class="list-group-item list-group-item-action" data-toggle="modal" data-target="#registerModal">Register</button>
</div>
<br>
<div class="list-group">
    <button type="button" class="list-group-item list-group-item-action">Durchsuchen</button>
    <% } else { %>
    <li class="list-group-item list-group">Eingeloggt als: <span class="badge badge-primary float-right">
            <%=username %></span></li>

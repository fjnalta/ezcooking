<!-- include static header -->
<% include partials/header.ejs %>

<!-- Include additional scripts -->
<script src="../public/js/dish/deleteDish.js"></script>

<!-- dynamic main content -->
<div class="container">
    <!-- move the content one row down -->
    <br>
    <!-- everything in this div in one row -->
    <div class="row">
        <!-- left menu -->
        <div class="col-3">
            <!-- include left menu -->
            <% include partials/left-menu.ejs %>
        </div>

        <!-- main content -->
        <div class="col-9">
            <div class="card card-header">
                Meine Rezepte
            </div>
            <br>

            <div class="card">
                <div class="col">
                    <br>
                    <% for(let i=0;i<data.length;i++) { %>
                        <div class="row">
                            <div class="col-2">
                                <a href="/dish/<%= data[i].id %>"><img src="/public/uploads/<%= data[i].image_name %>" alt="<%= data[i].name %>" class="img-thumbnail"></a>
                            </div>
                            <div class="col-6">
                                <p>
                                    Gericht: <%= data[i].name %><br>
                                    <small><%= data[i].short_description %></small>
                                </p>
                            </div>
                            <div class="col-3">
                                <!-- Duration -->
                                <p><i class="far fa-clock"></i> <%= data[i].duration %> min.</p>
                            </div>
                            <div class="col-1">
                                <p style="text-align: right">
                                    <a href="/dish/<%= data[i].id %>/edit"><button class="btn"><i class="fas fa-edit"></i></button></a>
                                    <!-- include delete modal -->
                                    <% include modals/delete-dish-modal.ejs %>
                                </p>
                            </div>
                        </div>
                        <div class="dropdown-divider"></div>
                    <% } %>
                    <br>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- include static footer -->
<% include partials/footer.ejs %>
<!-- spacing at content end -->
<br>
<!-- include static header -->
<% include partials/header.ejs %>

<!-- Include additional scripts -->
<script src="../public/js/addDishLogic.js"></script>

<!-- dynamic main content -->
<div class="container">
    <!-- move the content one row down -->
    <br>
    <!-- everything in this div in one row -->
    <div class="row">
        <!-- left menu -->
        <div class="col-3">
            <!-- include left menu -->
            <% include partials/left-menu.ejs %>
        </div>

        <!-- main content -->
        <div class="col-9">
            <div class="card">
                <div class="col">
                    <br>
                    <h1>Gericht hinzuf√ºgen</h1>
                    <h2>Allgemein</h2>
                    <div class="row">
                        <div class="col-9">
                            <label for="dishInputName">Name</label>
                            <input type="text" class="form-control" id="dishInputName" aria-describedby="dishNameHelp"
                                   placeholder="Enter name">
                            <label for="dishInputShortDescription">Kurzbeschreibung</label>
                            <input type="text" class="form-control" id="dishInputShortDescription"
                                   aria-describedby="dishShortDescriptionHelp"
                                   placeholder="Enter short description">
                        </div>
                        <div class="col-3">
                            <div class="row">
                                <div class="col-12">
                                    <label for="dishInputDuration">Zubereitungsdauer</label>
                                    <div class="input-group mb-3">
                                        <input type="text" class="form-control" id="dishInputDuration"
                                               placeholder="Dauer" aria-describedby="basic-addon2">
                                        <div class="input-group-append">
                                            <span class="input-group-text" id="basic-addon2">min</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <div class="float-right">
                                        <label for="dishUploadImage"><small>optional </small>Upload Image</label>
                                        <br>
                                        <button type="button" class="btn btn-info float-right" id="dishUploadImage">
                                            Browse
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="dropdown">
                                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownCategory"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Kategorie
                                </button>
                                <div class="dropdown-menu" id="dropdown-menu-category">
                                    <script>loadMainCategories();</script>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="dropdown">
                                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownSubCategory"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" disabled>
                                    Sub-Kategorie
                                </button>
                                <div class="dropdown-menu" id="dropdown-menu-subcategory"></div>
                            </div>
                        </div>
                    </div>

                    <!-- TODO add Tags via Bootstrap4 Badges inside Element - e.g. Button -->
                    <h2>Tags</h2>
                    <div class="row">
                        <div class="col-12">
                            <input type="text" class="form-control" id="dishTags">
                        </div>
                    </div>

                    <h2>Zutaten</h2>
                    <div class="row">
                        <div class="col-12">
                            <!-- Define jsGrid reference -->
                            <div id="jsGrid"></div>
                            <!-- Create Ingredients Table from jsGrid -->
                            <script>createIngredientsTable()</script>
                        </div>
                        <br>

                    </div>

                    <h2>Zubereitung</h2>
                    <label for="dishInputDescription">Beschreibung</label>
                    <div class="row">
                        <div class="col-12">
                            <div class="input-group">
                                <textarea class="form-control" aria-label="With textarea" rows="12"
                                          id="dishInputDescription"></textarea>
                            </div>
                        </div>
                    </div>

                    <br>
                    <div class="row">
                        <div class="col-12">
                            <button type="button" class="btn btn-primary float-right" id="dishUploadImage" style="margin-bottom: 10px"
                                    onclick="sendRecipe()">Speichern
                            </button>
                        </div>
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>

</div>
<!-- spacing between content and footer -->
<br>
<!-- include static footer -->
<% include partials/footer.ejs %>
<!-- spacing at content end -->
<br>
<!-- include static header -->
<% include partials/header.ejs %>

<!-- dynamic main content -->
<div class="container">
    <!-- move the content one row down -->
    <br>
    <!-- everything in this div in one row -->
    <div class="row">
        <!-- left menu -->
        <div class="col-3">
            <!-- include left menu -->
            <% include partials/left-menu.ejs %>
        </div>

        <!-- main content -->
        <div class="col-9">
            <h1>Gericht hinzuf√ºgen</h1>
            <h2>Allgemein</h2>
            <div class="row">
                <div class="col-7">
                    <form>
                        <div class="form-group">
                            <label for="dishInputName">Name</label>
                            <input type="text" class="form-control" id="dishInputName" aria-describedby="dishNameHelp"
                                placeholder="Enter name">
                        </div>
                    </form>
                    <form>
                        <div class="form-group">
                            <label for="dishInputShortDescription">Kurzbeschreibung</label>
                            <input type="text" class="form-control" id="dishInputShortDescription" aria-describedby="dishShortDescriptionHelp"
                                placeholder="Enter short description">
                        </div>
                    </form>
                </div>
                <div class="col-5">
                    <div class="row">
                        <div class="col-8">
                            <form>
                                <div class="form-group">
                                    <label for="dishInputDuration">Zubereitungsdauer</label>
                                    <input type="text" class="form-control" id="dishInputDuration" aria-describedby="dishInputDurationHelp"
                                        placeholder="Enter duration">
                                </div>
                            </form>
                        </div>
                        <div class="col-4">
                            <form>
                                <div class="form-group float-right">
                                    <label for="dishInputDuration">Einheit</label>
                                    <div class="dropdown">
                                        <button class="btn btn-info dropdown-toggle float-right" type="button" id="dropdownMetric"
                                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            min
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMetric">
                                            <button class="dropdown-item" type="button">min</button>
                                            <button class="dropdown-item" type="button">std</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <form>
                                <div class="form-group float-right">
                                    <label for="dishUploadImage"><small>optional </small>Upload Image</label>
                                    <br>
                                    <button type="button" class="btn btn-info float-right" id="dishUploadImage">Browse</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <form>
                        <div class="form-group">
                            <label for="dishInputDuration">Kategorie</label>
                            <div class="dropdown">
                                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMetric"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    min
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMetric">
                                    <button class="dropdown-item" type="button">min</button>
                                    <button class="dropdown-item" type="button">std</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-3 text-center">
                    <form>
                        <div class="form-group">
                            <label for="dishInputDuration">Sub-Kategorie</label>
                            <div class="dropdown">
                                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMetric"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    min
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMetric">
                                    <button class="dropdown-item" type="button">leicht</button>
                                    <button class="dropdown-item" type="button">mittel</button>
                                    <button class="dropdown-item" type="button">schwer</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-6 text-right">
                    <form>
                        <div class="form-group float-right">
                            <label for="dishInputDuration">Schwierigkeit</label>
                            <div class="dropdown">
                                <button class="btn btn-info dropdown-toggle float-right" type="button" id="dropdownMetric"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    leicht
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMetric">
                                    <button class="dropdown-item" type="button">leicht</button>
                                    <button class="dropdown-item" type="button">mittel</button>
                                    <button class="dropdown-item" type="button">schwer</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <h2>Zutaten</h2>
            <div class="row">
                <!-- add ingredients -->
                <div class="col-4">
                    <form>
                        <div class="form-group">
                            <label for="dishInputIngredientName">Name</label>
                            <input type="text" class="form-control" id="dishInputIngredientName" aria-describedby="dishIngredient_1Help"
                                placeholder="">
                        </div>
                    </form>
                </div>
                <div class="col-4">
                    <form>
                        <div class="form-group">
                            <label for="dishInputIngredientCount">Menge</label>
                            <input type="text" class="form-control" id="dishInputIngredientCount" aria-describedby="dishIngredient_1Help"
                                placeholder="">
                        </div>
                    </form>
                </div>
                <div class="col-2">
                    <div class="row">
                        <div class="col-12">
                            <label for="dishInputIngredientMetric">Einheit</label>
                            <div class="dropdown" id="dishInputIngredientMetric">
                                <button class="btn btn-info dropdown-toggle float-right" type="button" id="dropdownMetric"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    g
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMetric">
                                    <button class="dropdown-item" type="button">g</button>
                                    <button class="dropdown-item" type="button">kg</button>
                                    <button class="dropdown-item" type="button">el</button>
                                    <button class="dropdown-item" type="button">tl</button>
                                    <button class="dropdown-item" type="button">ml</button>
                                    <button class="dropdown-item" type="button">l</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <div class="row">
                        <label for="dishRemoveIngredient">Bearbeiten</label>
                        <div class="col-12">
                            <button type="button" class="btn btn-danger float-right" id="dishRemoveIngredient">-</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-12">
                    <button type="button" class="btn btn-success float-right" id="dishAddIngredient">+</button>
                </div>
            </div>

            <h2>Zubereitung</h2>
            <label for="dishInputDescription">Beschreibung</label>
            <div class="row">
                <div class="col-12">
                    <div class="input-group">
                        <textarea class="form-control" aria-label="With textarea" rows="8" id="dishInputDescription"></textarea>
                    </div>
                </div>
            </div>

            <br>
            <div class="row">
                <div class="col-12">
                    <button type="button" class="btn btn-primary float-right" id="dishUploadImage">Speichern</button>
                </div>

            </div>

        </div>
    </div>

</div>
<!-- spacing between content and footer -->
<br>
<!-- include static footer -->
<% include partials/footer.ejs %>
<!-- spacing at content end -->
